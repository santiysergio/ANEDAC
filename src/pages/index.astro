---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import { getCollection } from 'astro:content'

const MAX_POSTS = 5

const allFilteredPosts = (await getCollection('blog')).filter(
	(post) => post.data.listed !== false && !post.data.draft
)

const sortedPosts = allFilteredPosts.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)

const postsToShowOnHome = sortedPosts.slice(0, MAX_POSTS)
---

<BaseLayout title='Inicio'>
	<TitlePage title='ANEDAC' />
	<ListCategories />

	<div>
		<h2 class='text-lg font-medium tracking-wide text-end'>Otros posts</h2>
		<ListPosts FirstBig={true} posts={postsToShowOnHome} />
	</div>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },
				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
